{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    {% if panier is not empty %}
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ panier.id }}</td>
                </tr>
                <tr>
                    <th>DateAchat</th>
                    <td>{{ panier.dateAchat ? panier.dateAchat|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Etat</th>
                    <td>{{ panier.etat ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
    {% else %}
        <p>Votre panier est vide ! </p>
        <a href="{{ path('app_accueil') }}">Commencer vos achats</a>
    {% endif %}


{% endblock %}
