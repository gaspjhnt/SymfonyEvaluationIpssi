{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.Nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.Description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.Prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.Stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ produit.Photo }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-dark" onclick="window.location.href='{{ path('app_produit_index') }}'">Back to list</button>
    <button type="button" class="btn btn-dark" onclick="window.location.href='{{ path('app_produit_edit', {'id': produit.id}) }}'">Edit</button>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
