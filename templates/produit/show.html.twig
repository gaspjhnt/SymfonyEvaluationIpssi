{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/accueil.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <h1 class="card-title text-center mt-3 mb-0">Produit</h1>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="{{ asset('uploads/images/' ~ produit.Photo) }}" class="img-fluid" alt="Photo du produit">
                    </div>
                    <div class="col-md-6">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th scope="row">Nom</th>
                                    <td>{{ produit.Nom }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Prix</th>
                                    <td>{{ produit.Prix }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Stock</th>
                                    <td>{{ produit.Stock }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Description</th>
                                    <td>{{ produit.Description }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% if is_granted('ROLE_USER') %}
                <div class="card-footer text-right">
                    <a href="{{ path('app_panier_add', {'id': produit.id}) }}" class="btn btn-dark" >Ajouter au panier</a>
                    {%if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-dark">Ã‰diter</a>
                        <a href="{{ path('app_produit_delete', {'id': produit.id}) }}" class="btn btn-dark">Supprimer</a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
