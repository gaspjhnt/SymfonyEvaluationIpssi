{% extends 'base.html.twig' %}

{% block title %}Editer un utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="mx-auto" style="max-width: 400px;">
            <h1 class="h3 mb-3 font-weight-normal text-center">Editer un utilisateur</h1>

            {{ form_start(form) }}

            <div class="form-group">
                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.Nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.Prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
            </div>

            <button type="submit" class="btn btn-lg btn-primary btn-block mt-3">Mettre à jour</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
