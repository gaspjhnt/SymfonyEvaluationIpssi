                    <div class="col">
                        <a href="{{ path('app_admin') }}" class="btn btn-dark btn-block mt-3">Administration</a>
                    </div>
                {% endif %}

                <div class="col">
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-block mt-3">Edit</a>
