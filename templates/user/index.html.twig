{% extends 'base.html.twig' %}

{% block title %}{{ 'user.index.page_title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/accueil.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ 'user.index.title'|trans }}</h1>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">{{ 'user.index.table.id'|trans }}</th>
                <th scope="col">{{ 'user.index.table.email'|trans }}</th>
                <th scope="col">{{ 'user.index.table.roles'|trans }}</th>
                <th scope="col">{{ 'user.index.table.nom'|trans }}</th>
                <th scope="col">{{ 'user.index.table.prenom'|trans }}</th>
                <th scope="col">{{ 'user.index.table.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.Nom }}</td>
                    <td>{{ user.Prenom }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">{{ 'user.index.table.btn.see'|trans }}</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">{{ 'user.index.table.btn.edit'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{{ 'user.index.table.no_user'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin') }}" class="btn btn-dark">{{ 'user.index.back'|trans }}</a>
    </div>
{% endblock %}
